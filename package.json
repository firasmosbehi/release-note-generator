{
  "name": "release-note-generator",
  "version": "0.1.0",
  "description": "GitHub Action that drafts release notes from Conventional Commit PR titles when a tag is pushed.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --splitting false --clean",
    "lint": "eslint .",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "keywords": [
    "github-action",
    "release",
    "changelog",
    "conventional-commits"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "action.yml"
  ],
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0",
    "@actions/http-client": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
